module Dice

d : [0..6] init 0;

[] (Dice=0) -> 0.5 : (Dice'=1) + 0.5 : (Dice'=2);
[] (Dice=1) -> 0.5 : (Dice'=2) + 0.5 : (Dice'=3);
[] (Dice=1) -> 0.5 : (Dice'=1) + 0.5 : (d'=1)&(Dice'=3);
[] (Dice=1) -> 0.5 : (d'=2)&(Dice'=3) + 0.5 : (d'=3)&(Dice'=3);
[] (Dice=2) -> 0.5 : (Dice'=3) + 0.5 : (Dice'=4);
[] (Dice=2) -> 0.5 : (Dice'=2) + 0.5 : (d'=4)&(Dice'=3);
[] (Dice=2) -> 0.5 : (d'=5)&(Dice'=3) + 0.5 : (d'=6)&(Dice'=3);
[] (Dice=3) -> 1 : (Dice'=3);

endmodule

